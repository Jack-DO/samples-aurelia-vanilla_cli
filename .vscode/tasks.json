{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "au-test",
            "command": "au test",
            "options": {
                "cwd": "${workspaceRoot}/dotnetnew-mvc/"
            },
            "dependsOn": ["build"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "identifier": "au-test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "dedicated",
                "focus": true
            },
            "type": "shell"
        }
    ]
}